mainmenu "Eurus Flight Controller"

config APP_DATA_LOGGING_SYNC_INTERVAL
	int "Data logging Sync interval [ms]"
	default 1000
	help
		This configures the interval at which the logging system flushes everything to disk
		and hence determines the maximum duration of data lost on power cuts.

choice APP_PRIMARY_IMU
	prompt "Primary IMU"
	default APP_PRIMARY_IMU_ICM42688P
	help
		This configures Eurus Flight Controller primary IMU.

config APP_PRIMARY_IMU_MPU6050
 	bool "MPU6050"

config APP_PRIMARY_IMU_ICM42688P
	bool "ICM42688P"

endchoice

# MIXER Unmanned aerial vehicle geometrical configuration
menu "Mixer configuration"
    choice
        prompt "Mixer UAV geometrical configuration"
        default MIXER_UAV_QUADROTOR_X

    config MIXER_UAV_QUADROTOR_X
        bool "UAV quadrotor 'X' configuration"

    config MIXER_UAV_QUADROTOR_CROSS
        bool "UAV quadrotor '+' configuration"

    config MIXER_UAV_HEXAROTOR_X
        bool "UAV hexarotor 'X' configuration"

    config MIXER_UAV_HEXAROTOR_CROSS
        bool "UAV hexarotor '+' configuration"

    endchoice
endmenu

# ESC Protocol configuration
menu "ESC Configuration"    
    choice
        prompt "ESC Protocol Selection"
        default ESC_PWM

    config ESC_PWM
        bool "ESC PWM protocol"

    config ESC_ONESHOT_125
        bool "ESC Oneshot125 protocol"

    config ESC_ONESHOT_42
        bool "ESC Oneshot42 protocol"

    config ESC_MULTISHOT
        bool "ESC Multishot protocol"

    endchoice
endmenu

source "../efc/libs/motor_control/esc/Kconfig"

source "../efc/libs/motor_control/mixer/Kconfig"

source "Kconfig.zephyr"
